<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Header trên cùng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mint_green"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/text_dark"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Thanh tiêu đề chứa My Profile -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mint_green"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <!-- Icon Back bên trái -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <!-- My Profile + Icon Person căn giữa -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_profile"
                android:textColor="@color/text_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_person" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- Ảnh đại diện -->
    <ImageView
        android:id="@+id/img_DaiDien"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_daidien"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:backgroundTint="#cee1e1"/>

    <!-- Tên người dùng -->
    <TextView
        android:id="@+id/tv_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Khánh Linh"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_gray"
        android:layout_marginTop="8dp"/>

    <!-- Các nút điều hướng -->
    <Button
        android:id="@+id/btn_MyProfile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="My profile"
        android:backgroundTint="#cee1e1"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_LibraryPage"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Library page"
        android:backgroundTint="#cee1e1"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_Logout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Đăng xuất"
        android:backgroundTint="#cee1e1"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"/>
</LinearLayout>
